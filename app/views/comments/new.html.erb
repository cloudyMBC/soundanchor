<%= form_for :comment, url: comments_path do |f| %>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= button_to 'See all Comments', comments_path, :class => "button", :method => :get %>
<%= button_to 'Back to Soundfile', welcome_index_path, :class => "button", :method => :get %>